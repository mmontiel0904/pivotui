{
  "name": "pivotui",
  "version": "0.1.0",
  "description": "A Vue 3 component library with Tailwind CSS",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "main": "./dist/pivotui.umd.cjs",
  "module": "./dist/pivotui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/pivotui.js",
      "require": "./dist/pivotui.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:lib": "vue-tsc -b && vite build --config vite.config.lib.ts",
    "build:docs": "vite build --config vite.config.docs.ts",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "keywords": [
    "vue",
    "vue3",
    "components",
    "ui",
    "tailwind",
    "typescript"
  ],
  "author": "Marcos Montiel <marcosmontiel791@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmontiel0904/pivotui.git"
  },
  "homepage": "https://mmontiel0904.github.io/pivotui",
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.6",
    "@fontsource/jetbrains-mono": "^5.2.6",
    "@fontsource/source-serif-pro": "^5.2.5",
    "@tailwindcss/vite": "^4.1.11",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/tsconfig": "^0.7.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vue": "^3.5.17",
    "vue-tsc": "^2.2.12"
  }
}
